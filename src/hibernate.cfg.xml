<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<!-- Generated by MyEclipse Hibernate Tools.                   -->
<hibernate-configuration>

<session-factory>
	<property name="dialect">
		org.hibernate.dialect.MySQL5InnoDBDialect
	</property>
	<property name="show_sql">true</property>
	<property name="hbm2ddl.auto">update</property>
	<!-- 
		这个在hibernate的配置文件中绝对不能加，如果加了这个则jbpm的表不能创建
		与jbpm冲突
		不能从当前线程中获取session
		<property name="current_session_context_class">thread</property>
	 -->
	<!--导入实体的映射文件-->
	<mapping resource="com/myoa/domain/Department.hbm.xml" />
	<mapping resource="com/myoa/domain/Role.hbm.xml" />
	<mapping resource="com/myoa/domain/User.hbm.xml" />
	<mapping resource="com/myoa/domain/Privilege.hbm.xml" />
	<mapping resource="com/myoa/domain/Forum.hbm.xml" />
	<mapping resource="com/myoa/domain/Reply.hbm.xml" />
	<mapping resource="com/myoa/domain/Topic.hbm.xml" />
	
	<!-- 导入jbpm映射文件 -->
	<mapping resource="jbpm.repository.hbm.xml" />
	<mapping resource="jbpm.execution.hbm.xml" />
	<mapping resource="jbpm.history.hbm.xml" />
	<mapping resource="jbpm.task.hbm.xml" />
	<mapping resource="jbpm.identity.hbm.xml" />
	
	<mapping resource="com/myoa/domain/ApplicationTemplate.hbm.xml" />
	<mapping resource="com/myoa/domain/Application.hbm.xml" />
	<mapping resource="com/myoa/domain/ApproveInfo.hbm.xml" />
</session-factory>

</hibernate-configuration>